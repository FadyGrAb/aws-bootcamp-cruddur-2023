#! /usr/bin/bash
-e

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="db-setup"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"

BIN_PATH="$(realpath .)/bin"

# Drop the db
bash "$BIN_PATH/db-drop"
# Create the db
bash "$BIN_PATH/db-create"
# Load the schema
bash "$BIN_PATH/db-schema-load"
# Seed tables
bash "$BIN_PATH/db-seed"