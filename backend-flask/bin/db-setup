#! /usr/bin/bash
-e

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="db-setup"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"

BIN_PATH="$(realpath .)/bin"

if [ "$1" = "prod" ]
then
    echo "WARNING: This will delete everything in the pord database."
    read -p "Are you sure you want to continue?[y/N] " -n1 -r
    if [[ ! $REPLY =~ ^[Yy]$ ]]
    then
        exit 0
    fi
fi
echo " "

if [ "$1" != "prod" ]
then
    # Drop the db
    bash "$BIN_PATH/db-drop" $1
    # Create the db
    bash "$BIN_PATH/db-create" $1
fi
# Load the schema
bash "$BIN_PATH/db-schema-load" $1
# Seed tables
if [ "$1" = "prod" ]
then
    read -p "Do you want to seed prod database with mock data?[y/N] " -n1 -r
    if [[ ! $REPLY =~ ^[Yy]$ ]]
    then
        exit 0
    fi
fi
echo " "
bash "$BIN_PATH/db-seed" $1