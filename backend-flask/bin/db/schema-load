#! /usr/bin/bash
CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="db-schema-load"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"


SCHEMA_PATH=$(realpath .)/db/schema.sql

if [ "$1" = "prod" ]
then
    MESSAGE="Using Prod"
    printf "${CYAN}== ${MESSAGE}${NO_COLOR}\n"

    CON_URL=$PROD_CONNECTION_URL
else
    MESSAGE="Using Dev"
    printf "${CYAN}== ${MESSAGE}${NO_COLOR}\n"
    CON_URL=$CONNECTION_URL
fi

psql $CON_URL < $SCHEMA_PATH